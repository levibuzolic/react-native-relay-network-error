{
  "extends": "expo/tsconfig.base",
  "include": [
    "./App.tsx",
    "./src/**/*"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "moduleResolution": "node",
    "lib": [
      "ESNext"
    ],
    "jsx": "react-native",
    "typeRoots": ["types", "node_modules/@types"]
  }
}
